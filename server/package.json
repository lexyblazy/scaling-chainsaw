{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 140,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "parser": "typescript",
    "trailingComma": "none"
  },
  "scripts": {
    "build": "rm -rf ./lib && yarn tsc",
    "start": "yarn build && TZ='Etc/UTC' node lib/index.js",
    "dev": "yarn build && TZ='Etc/UTC'yarn nodemon lib/index.js",
    "test": "jest --detectOpenHandles",
    "test:ci": "jest --detectOpenHandles --CI=true",
    "typeorm": "yarn build && node --require ts-node/register ./node_modules/typeorm/cli.js",
    "run:db:migrations": "yarn typeorm migration:run",
    "seed:db": "yarn build && node lib/seed.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.12",
    "@types/lodash": "^4.14.170",
    "@types/uuid": "^8.3.1",
    "nodemon": "^2.0.9",
    "prettier": "^2.3.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "lodash": "^4.17.21",
    "normalize-email": "^1.1.1",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.2"
  }
}
